!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Spicon Demo"
    = stylesheet_link_tag    "application"
    = csrf_meta_tags
  %body
    .navbar.navbar-default.navbar-fixed-top.header-container{role: "navigation"}
      .container
        .navbar-collapse.collapse.navbar-bottom
          %ul.nav.navbar-nav
            %li{class: 'active'}
              = link_to 'Spicon Demo', '/'
        / /.nav-collapse
        %a{href: "https://github.com/gemathon-warriors/spicon"}
          %img{alt: "Fork me on GitHub", src: "https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png", style: "position: fixed; top: 0; right: 0; border: 0; z-index: 10000;"}/
    .container.content
      = yield
    = javascript_include_tag "application"
    .footer-container
      .footer.container
        Copyright 2014 Â© Spicon