!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Warriors Arena"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body.land_page
    .menu_icons
      %a{href: "https://github.com/gemathon-warriors/spicon"}
        %img{alt: "Fork me on GitHub", src: "https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png", style: "position: fixed; top: 0; right: 0; border: 0; z-index: 10000;"}
    #socialize
      %ul.top_icons
        %li
          %a.icon-button.timezonify{href: "#"}
            %i.fa.fa-clock-o.fa-3x.spicon-spin.duration-2s.iteration-6.normal
            %span
          %a.icon-button.tareek{href: "#"}
            %i.fa.fa-calendar.fa-3x.spicon-spin.duration-2s.iteration-6.reverse
            %span
      .gems_img
        = image_tag "gemathon_warriors_logo_200px.png", class: "central_img"
      %ul.bottom_icons
        %li
          %a.icon-button.contineo{href: "#"}
            %i.fa.fa-sitemap.fa-3x.spicon-spin.duration-2s.iteration-6.alternate
            %span
          %a.icon-button.bugs{href: "https://github.com/gemathon-warriors"}
            %i.fa.fa-bug.fa-3x.spicon-spin.duration-2s.iteration-6.alternate-reverse
            %span